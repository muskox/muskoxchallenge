    <div class="col-md-6">
      <p class="text-right">
        <label for="mobilize">Stretch (Mobilize)</label>
      </p>
    </div>
    <div class="col-md-6">
      <div class="onoffswitch">
        <%= check_box_tag "post[mobilize]", "1", true, :class => 'onoffswitch-checkbox' %>
