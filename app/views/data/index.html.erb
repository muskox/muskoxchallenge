      <p class="text-right">
        <button type="button" class="btn btn-lg btn-default" data-dismiss="modal">Cancel</button>
      </p>
    </div>
    <div class="col-md-6">
      <%= f.submit 'Save', :class => 'btn btn-lg btn-primary' %>
    </div>
  </div>

        <% end %>

  </fieldset>

      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
