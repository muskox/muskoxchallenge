      <div class="onoffswitch">
        <%= check_box_tag "post[workout]", "1", true, :class => 'onoffswitch-checkbox' %>
        <label class="onoffswitch-label" for="post_workout">
          <div class="onoffswitch-inner"></div>
          <div class="onoffswitch-switch"></div>
        </label>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">&nbsp;</div>
    <div class="col-md-6">&nbsp;</div>
  </div>

