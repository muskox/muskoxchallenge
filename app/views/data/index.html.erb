    <div class="container">
      <div class="starter-template">

        <div class="row">
          <div class="col-md-6">
            <p class="lead">Welcome, <%= current_user.name %></p>
          </div>
          <% if @today_point == 0 %>
          <div class="col-md-6">
            <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#RecordPointsModal">Record Points</button>
          </div>
          <% end %>
        </div>


  <div class="row">
    <div class="col-md-6">&nbsp;</div>
    <div class="col-md-6">&nbsp;</div>
  </div>

      <div class="table-responsive">
        <table class="table">

          <tr>
          <td></td>
          <% @dateslist.each do |n| -%>
          <td><%= n  %></td>
          <% end -%>
          </tr>

          <tr>
          <td>Meditate (Workout)</td> 
          <% @workoutlist.each do |n| -%>
          <td><% if n == 1 -%><span class="badge badge-yellow">&nbsp;</span><% else -%>&nbsp;<% end -%></td>
